import java.util.*;




public class Q000_A_Contest 
{
	public int arraySign(int[] nums) 
    {
        if (nums == null || nums.length == 0)
        {
            return 0;
        }
        
        int result = 1;
        
        for (int num : nums)
        {
            if (num < 0)
            {
                result *= -1;
            }
            else if (num == 0)
            {
                return 0;
            }
        }
        
        return result;
    }
	
	
	public int findTheWinner(int n, int k) 
    {
        if (n <= 0 || k <= 0 || k > n)
        {
            return -1;
        }
        
        int index = 0;
        boolean[] visited = new boolean[n];
        int count = 0;
        
        while (count < n-1)
        {
            while (visited[index])
            {
                index = (index+1) % n;
            }
            
            int step = 0;
            
            while (step < k)
            {
                while (visited[index])
                {
                    index = (index+1) % n;
                }
                
                visited[index] = true;
                step++;
                count++;
                
                System.out.println(index);
            }
        }
        
        return index+1;
    }



    
    public static void main(String[] args)
    {
    	Q000_A_Contest test = new Q000_A_Contest();
    	
    	/****************************************************/
    	
    	int n1 = 5, k1 = 2;
    	System.out.println(test.findTheWinner(n1, k1));
    	
    	
    	
    }
}
