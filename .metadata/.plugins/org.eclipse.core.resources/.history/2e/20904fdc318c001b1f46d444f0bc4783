			{
				print(entry.getKey());
				
				
				long status = entry.getKey() | (1 << next);
				cache[start].put(status, entry.getValue() + moneys[next-1]);
			}
			
			visited.removeAll(removed);
		}
		
		return cache[start];
	}
	
	
