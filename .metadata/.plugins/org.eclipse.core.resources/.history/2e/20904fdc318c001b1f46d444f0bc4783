	private static Map<Long, Integer> search(int start, Set<Integer> visited)
	{
		if (start == n+1)
		{
			Map<Long, Integer> map = new HashMap<>();
			map.put(0L, 0);
			return map;
		}
		
		if (cache[start] != null)
		{
			return cache[start];
		}
		
		cache[start] = new HashMap<>();
		
		for (int next = start; next <= n; next++)
		{
			if (visited.contains(next))
			{
				continue;
			}
			
