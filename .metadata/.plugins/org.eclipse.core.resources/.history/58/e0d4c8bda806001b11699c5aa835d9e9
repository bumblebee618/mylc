import java.util.HashMap;
import java.util.Map;

public class PizzaFactory 
{
	private static final Map<PizzaFlavor, Double> prices = new HashMap<PizzaFlavor, Double>(); 
	
	static 
	{
		prices.put(PizzaFlavor.PINEAPPLE, 5.99);
		prices.put(PizzaFlavor.PEPPER, 6.99);
		prices.put(PizzaFlavor.BEEF, 7.99);
	};
	
	public static Pizza createPizza(PizzaFlavor flavor)
	{
		switch (flavor)
		{
			case PINEAPPLE: return new Pizza(flavor, prices.get(flavor));
			case PEPPER: return new Pizza(flavor, prices.get(flavor));
			case BEEF: return new Pizza(flavor, prices.get(flavor));
			default: return null;
		}
	}
}
