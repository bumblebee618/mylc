import java.util.Timer;

public abstract class Fish implements Runnable
{
	protected String fishId;
	protected FishType type;
	protected int foodInStomach;
	protected int stomachCapacity;
	protected Timer timer;
	
	public int feed(int food)
	{
		int eat = Math.min(food, stomachCapacity - foodInStomach);
		foodInStomach += eat;
		return eat;
	}
	
	public boolean isHealthy()
	{
		return foodInStomach > 0;
	}
	
	public String getFishId() 
	{
		return fishId;
	}
	
	public FishType getType() 
	{
		return type;
	}
}

enum FishType
{
	GOLDFISH(), SHARK();
}
