import java.util.*;





public class Q000_A_Contest 
{	  
	
									
	
    public static void main(String[] args)
    {
    	Q000_A_Contest test = new Q000_A_Contest();
    	
    	/****************************************************/
    	
    	int[] nums1 = {5,1,3};
    	int[] nums2 = {1,1,1};
    	int[] nums3 = {1,1,2,2,3};
    	
    	System.out.println(test.reductionOperations(nums1));
    	System.out.println(test.reductionOperations(nums2));
